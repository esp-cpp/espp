menu "Remote Debug Example Configuration"

    config REMOTE_DEBUG_DEVICE_NAME
        string "Device Name"
        default "ESP32 Device"
        help
            Name of the device shown in the web interface title.

    config REMOTE_DEBUG_WIFI_SSID
        string "WiFi SSID"
        default ""
        help
            SSID (network name) for the example to connect to. If left blank, it will connect to the last used SSID.

    config REMOTE_DEBUG_WIFI_PASSWORD
        string "WiFi Password"
        default ""
        help
            WiFi password (WPA or WPA2) for the example to use.

    config REMOTE_DEBUG_SERVER_PORT
        int "Debug Server Port"
        default 8080
        range 1 65535
        help
            HTTP port for the remote debug web interface.

    menu "GPIO Configuration"

        config REMOTE_DEBUG_NUM_GPIOS
            int "Number of GPIOs to expose"
            default 4
            range 1 10
            help
                Number of GPIO pins to make available for remote control.

        config REMOTE_DEBUG_GPIO_0
            int "GPIO Pin 0"
            default 2
            range 0 48
            depends on REMOTE_DEBUG_NUM_GPIOS >= 1
            help
                First GPIO pin to control.

        config REMOTE_DEBUG_GPIO_0_LABEL
            string "GPIO Pin 0 Label"
            default "GPIO 2"
            depends on REMOTE_DEBUG_NUM_GPIOS >= 1
            help
