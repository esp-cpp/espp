menu "WiFi Provisioning Example Configuration"

    config PROVISIONING_AP_SSID
        string "Access Point SSID"
        default "ESP32-Setup"
        help
            SSID (network name) for the temporary access point created for provisioning.
            Leave empty to auto-generate based on MAC address.

    config PROVISIONING_AP_PASSWORD
        string "Access Point Password"
        default "configure"
        help
            Password for the temporary access point.
            Must be at least 8 characters. Leave empty for open network.

    config PROVISIONING_AP_CHANNEL
        int "Access Point Channel"
        default 1
        range 1 13
        help
            WiFi channel for the access point (1-13).

    config PROVISIONING_AP_MAX_CONNECTIONS
        int "Max Simultaneous Connections"
        default 4
        range 1 10
        help
            Maximum number of stations that can connect to the AP simultaneously.

    config PROVISIONING_SERVER_PORT
        int "Web Server Port"
        default 80
        range 1 65535
        help
            HTTP port for the provisioning web server.

    config PROVISIONING_TIMEOUT_SECONDS
        int "Provisioning Timeout (seconds)"
        default 300
        range 0 3600
        help
            Time in seconds before provisioning times out.
            Set to 0 for no timeout.

    config PROVISIONING_AUTO_GENERATE_SSID
        bool "Auto-generate unique SSID"
        default n
        help
            If enabled, appends the last 3 bytes of MAC address to the AP SSID
            to make it unique (e.g., "ESP32-Setup-AB12CD").

    config PROVISIONING_RESET_BUTTON_GPIO
        int "Reset Button GPIO"
        default -1
        range -1 48
        help
            GPIO pin for reset button to clear stored credentials.
            Set to -1 to disable reset button feature.

    config PROVISIONING_LED_GPIO
        int "Status LED GPIO"
        default -1
        range -1 48
        help
            GPIO pin for status LED (blinks during provisioning).
            Set to -1 to disable LED feature.

    config PROVISIONING_VALIDATE_CREDENTIALS
        bool "Validate WiFi credentials before saving"
        default y
        help
            Test WiFi connection before saving credentials to NVS.
            Recommended to prevent saving invalid credentials.

    config PROVISIONING_NVS_NAMESPACE
        string "NVS Namespace"
        default "wifi_config"
        help
            NVS namespace to store WiFi credentials.

endmenu
