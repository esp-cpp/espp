# Flash size
CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y
CONFIG_ESPTOOLPY_FLASHSIZE="4MB"

# CONFIG_ESP32_WIFI_NVS_ENABLED=n

CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"
CONFIG_PARTITION_TABLE_FILENAME="partitions.csv"
CONFIG_PARTITION_TABLE_OFFSET=0x8000
CONFIG_PARTITION_TABLE_MD5=y

# Common ESP-related
#
CONFIG_ESP_SYSTEM_EVENT_TASK_STACK_SIZE=4096
CONFIG_ESP_MAIN_TASK_STACK_SIZE=8192

# HTTP Server
CONFIG_HTTPD_MAX_REQ_HDR_LEN=1024
CONFIG_HTTPD_MAX_URI_LEN=512

# Default provisioning settings
CONFIG_PROVISIONING_AP_SSID="ESP32-Setup"
CONFIG_PROVISIONING_AP_PASSWORD="configure"
CONFIG_PROVISIONING_AP_CHANNEL=1
CONFIG_PROVISIONING_AP_MAX_CONNECTIONS=4
CONFIG_PROVISIONING_SERVER_PORT=80
CONFIG_PROVISIONING_TIMEOUT_SECONDS=300
CONFIG_PROVISIONING_AUTO_GENERATE_SSID=y
CONFIG_PROVISIONING_RESET_BUTTON_GPIO=-1
CONFIG_PROVISIONING_LED_GPIO=-1
CONFIG_PROVISIONING_VALIDATE_CREDENTIALS=y
CONFIG_PROVISIONING_NVS_NAMESPACE="wifi_config"
